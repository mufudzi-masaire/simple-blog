=provide(:title, @post.title)

.row
	.span8.offset2
		= link_to 'Back', posts_path, class: 'btn span1 right'

		.clear

		%p#notice= notice
		
		%p.center
			%b= @post.title.upcase
			
		.clear

		%p.center 
			by:
			%b= @post.author.capitalize

		.clear

		%p
			%p= @post.content.capitalize

		.clear

		= link_to 'Edit', edit_post_path(@post), class: 'btn span1 left'
		\ |
		= link_to "Delete", @post, :confirm => "Are you sure", :method => :delete, class: 'btn btn-danger span1 left'
